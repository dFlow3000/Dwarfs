<Application x:Class="Dwarfs.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dwarfs"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Field_Styles.xaml"/>
                <ResourceDictionary Source="Styles/Titelbar_Styles.xaml"/>
                <ResourceDictionary Source="Styles/Slider_Styles.xaml"/>
                <ResourceDictionary Source="Styles/Upgrade_Button_Styles.xaml"/>
                <ResourceDictionary Source="Styles/Label_Styles.xaml"/>
                <ResourceDictionary Source="Styles/Clock_Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BitmapImage x:Key="Night_Alarm_ON" UriSource="Pictures/Clock/Night_Alarm_ON.png"/>
            <BitmapImage x:Key="Night_Alarm_OFF" UriSource="Pictures/Clock/Night_Alarm_OFF.png"/>
            <BitmapImage x:Key="BackgroundImage_Day" UriSource="Pictures/Background/Main_Window_Backgrounds/pexels-photo-355747.png"/>
            <BitmapImage x:Key="BackgroundImage_Night" UriSource="Pictures/Background/Main_Window_Backgrounds/Night_pexels-photo-355747.png"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
